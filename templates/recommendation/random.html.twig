{% extends 'base.html.twig' %}

{% block title %}{{ title }} - Movie Recommendations{% endblock %}

{% block body %}
    <h1>{{ title }}</h1>
    <p>Here are 3 randomly selected movie recommendations for you:</p>

    {% if movies|length > 0 %}
        <ul class="movie-list">
            {% for movie in movies %}
                <li>{{ movie.title }}</li>
            {% endfor %}
        </ul>
    {% else %}
        <p class="empty-message">No movies found in the database.</p>
    {% endif %}
{% endblock %}
